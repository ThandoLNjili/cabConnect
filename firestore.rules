rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Public read: required for unauthenticated boot and ClientBooking
      allow read: if true;

      // Drivers self-register — must set approved:false, cannot claim role:admin
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.data.approved == false &&
        request.resource.data.role != 'admin';

      // Any authenticated user can update profiles.
      // Admin-only enforcement (approve/reject) is handled at the app layer —
      // only users with role:'admin' are routed to AdminDashboard.
      allow update: if request.auth != null;

      // Only the owning user or an authenticated user that is not changing
      // role/approved can delete — deletions are admin-reject only in the UI.
      allow delete: if request.auth != null;
    }

    match /requests/{requestId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
  }
}
