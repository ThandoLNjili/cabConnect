rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Public read needed for ClientBooking driver-availability query
      allow read: if true;

      // Drivers self-register: must be their own UID, role must be 'driver', approved must start false
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.data.role == 'driver' &&
        request.resource.data.approved == false;

      // Drivers can update their own profile (e.g. toggle availability)
      // but CANNOT change role or approved — prevents self-approval
      allow update: if request.auth != null &&
        request.auth.uid == userId &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'approved']);

      // Any authenticated user can update any profile.
      // Admin-only enforcement (approve/reject) is handled at the app layer.
      allow update: if request.auth != null;

      // Any authenticated user can delete profiles (admin-reject in the UI).
      allow delete: if request.auth != null;
    }

    match /requests/{requestId} {
      // Anyone can read and create requests (unauthenticated passengers need this)
      allow read: if true;
      allow create: if true;

      // Only authenticated users (drivers) can update a request (accept a ride)
      allow update: if request.auth != null;

      // Prevent deletion from the client
      allow delete: if false;

      // In-app chat messages — readable and writable by anyone (client is unauthenticated)
      match /messages/{messageId} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if false;
      }
    }
  }
}