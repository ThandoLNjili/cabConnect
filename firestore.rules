rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Public read needed: app reads driver profile on auth state change (unauthenticated boot)
      // and ClientBooking reads driver info without auth
      allow read: if true;

      // Drivers self-register â€” must set approved:false and cannot claim role:admin
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.data.approved == false &&
        request.resource.data.role != 'admin';

      // Users update their own profile but cannot touch approved/role
      // Admins can update anything (approve/reject drivers)
      allow update: if request.auth != null && (
        isAdmin() ||
        (
          request.auth.uid == userId &&
          !('approved' in request.resource.data.diff(resource.data).affectedKeys()) &&
          !('role' in request.resource.data.diff(resource.data).affectedKeys())
        )
      );

      // Only admins can delete (reject) a driver profile
      allow delete: if isAdmin();
    }

    match /requests/{requestId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
  }
}
