rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // Admins can read all profiles; users can read their own
      allow read: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());

      // Drivers self-register, but must set approved: false and cannot set role: admin
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.data.approved == false &&
        request.resource.data.role != 'admin';

      // Users can update their own profile but cannot change approved/role
      // Admins can update anything (including approving drivers)
      allow update: if request.auth != null && (
        isAdmin() ||
        (
          request.auth.uid == userId &&
          !('approved' in request.resource.data.diff(resource.data).affectedKeys()) &&
          !('role' in request.resource.data.diff(resource.data).affectedKeys())
        )
      );

      // Only admins can delete (reject) driver profiles
      allow delete: if isAdmin();
    }

    match /requests/{requestId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
  }
}
